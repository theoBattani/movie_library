<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>


<Stage fx:id="stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.theo.control.AddViewController">
   <scene>
      <Scene fx:id="scene">
         <root>
            <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="320.0">
               <children>
                  <TextField fx:id="titleField" layoutX="32.0" layoutY="47.0" prefHeight="32.0" prefWidth="256.0" promptText="Title">
                     <font>
                        <Font name="Consolas" size="12.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="yearField" layoutX="33.0" layoutY="84.0" prefHeight="32.0" prefWidth="256.0" promptText="Year">
                     <font>
                        <Font name="Consolas" size="12.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="directorNameField" layoutX="33.0" layoutY="122.0" prefHeight="32.0" prefWidth="256.0" promptText="Director name">
                     <font>
                        <Font name="Consolas" size="12.0" />
                     </font>
                  </TextField>
                  <Label layoutX="96.0" layoutY="14.0" text="add new movie">
                     <font>
                        <Font name="Consolas Bold" size="18.0" />
                     </font>
                  </Label>
                  <Button layoutX="33.0" layoutY="161.0" mnemonicParsing="false" onAction="#cancelAction" style="-fx-background-color: pink;" text="cancel">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button layoutX="212.0" layoutY="161.0" mnemonicParsing="false" onAction="#addMovieAction" style="-fx-background-color: lightgreen;" text="add movie">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </root>
      </Scene>
   </scene>
</Stage>
