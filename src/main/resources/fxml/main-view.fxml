<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.stage.Stage?>

<Stage fx:id="stage" onCloseRequest="#onStageClose" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.theo.control.MainViewController">
   <scene>
      <Scene fx:id="scene">
         <root>
            <AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="640.0" style="-fx-background-color: gray;">
               <children>
                  <TableView fx:id="tableView" layoutX="173.0" layoutY="14.0" prefHeight="453.0" prefWidth="453.0">
                    <columns>
                      <TableColumn fx:id="titleColumn" prefWidth="202.0" text="Tilte" />
                      <TableColumn fx:id="yearColumn" minWidth="0.0" prefWidth="56.0" text="Year" />
                        <TableColumn fx:id="directorColumn" prefWidth="208.0" text="Director" />
                    </columns>
                  </TableView>
                  <Button layoutX="48.0" layoutY="220.0" mnemonicParsing="false" onAction="#onAddAction" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: green;">
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../assets/add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button layoutX="48.0" layoutY="306.0" mnemonicParsing="false" onAction="#onUpdateAction" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: blue;">
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../assets/update-arrows.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button layoutX="48.0" layoutY="394.0" mnemonicParsing="false" onAction="#onDeleteAction" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: red;">
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../assets/delete.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </AnchorPane>
         </root>
      </Scene>
   </scene>
</Stage>
